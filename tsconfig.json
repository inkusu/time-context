{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "removeComments": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true,
    "types": ["node", "jest"],
    "paths": {
      "~*": ["src/*"]
    }
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}